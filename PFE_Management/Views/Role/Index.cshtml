@model IEnumerable<IdentityRole>

<h1 class="bg-info text-white">Les roles</h1>
<br />
<a asp-action="Create" class="btn btn-secondary">Creer un Role</a>
<br />
<br />
<table class="table table-sm table-bordered table-bordered">
    <tr><th>ID</th><th>Role</th><th>Utilisateurs</th><th>Affecter utilisateurs</th><th>Supprimer</th></tr>
    @foreach (var role in Model)
    {
        <tr>
            <td>@role.Id</td>
            <td>@role.Name</td>
            <td i-role="@role.Id"></td>
            <td><a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@role.Id">Ajouter</a></td>
            <td>
                <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>